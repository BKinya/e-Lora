<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Node"
android:layout_marginTop="@dimen/margin_horizontal">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
                android:id="@+id/node_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_centerHorizontal="true"
                android:paddingVertical="@dimen/padding"/>

        <TextView
                android:id="@+id/location_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/node_spinner"
                android:text="@string/location"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textColor="@color/color_black"/>

        <EditText
                android:id="@+id/location_value_txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/location_txtview"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
                android:id="@+id/temp_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/location_value_txt_view"
                android:text="@string/average_temperature"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_black"/>

        <EditText
                android:id="@+id/temp_value_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/temp_txtview"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:id="@+id/humidity_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/temp_value_txtview"
                android:text="@string/average_humidity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_black"/>

        <EditText
                android:id="@+id/humidity_value_txt_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:padding="@dimen/padding"
                android:layout_below="@+id/humidity_txtview"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerHorizontal="true"/>

        <Button
                android:id="@+id/node_charts_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:layout_below="@+id/humidity_value_txt_view"
                android:padding="@dimen/btn_padding"
                android:text="@string/view_charts"
                android:background="@color/text_color_orange"
                android:textColor="@color/color_white"/>

    </RelativeLayout>

</ScrollView>