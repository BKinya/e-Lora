<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Data">

    <LinearLayout
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/temperature_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_black"
                android:padding="@dimen/padding_vertical"/>

        <EditText
                android:id="@+id/temp_value_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/temperature_txtview"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/humidity_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_black"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/temp_value_txt"/>

        <EditText
                android:id="@+id/humidity_value_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/humidity_txtview"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/BMP_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bmp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_black"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/humidity_value_txt"/>

        <EditText
                android:id="@+id/BMP_value_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/BMP_txtview"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
                android:id="@+id/battery_level_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery_level"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_black"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/BMP_value_txt"/>

        <EditText
                android:id="@+id/battery_level_value_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/battery_level_txtview"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:id="@+id/signal_level_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signal_level"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_black"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/battery_level_value_txt"/>

        <EditText
                android:id="@+id/signal_level_value_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_vertical"
                android:layout_below="@+id/signal_level_txtview"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

</ScrollView>